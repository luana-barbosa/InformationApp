<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/informationView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/ui_space_size_4dp"
    android:layout_marginTop="@dimen/ui_space_size_8dp"
    app:cardCornerRadius="@dimen/ui_space_size_4dp"
    android:layout_marginStart="@dimen/ui_space_size_16dp"
    android:layout_marginEnd="@dimen/ui_space_size_16dp"
    android:clickable="true"
    android:columnOrderPreserved="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/ui_space_size_80dp"
                android:layout_height="@dimen/ui_space_size_80dp"
                android:autoLink="web"
                android:linksClickable="true"
                android:background="@color/white"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/ui_space_size_8dp"
                android:layout_marginTop="@dimen/ui_space_size_20dp"
                android:layout_marginBottom="10dp"
                android:textAppearance="@style/TextAppearance.P2"
                tools:text="krisconti3066@ham.com" />

        </LinearLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginStart="@dimen/ui_space_size_80dp"
            android:layout_marginTop="@dimen/ui_space_size_8dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.P4"
            tools:text="Wender Gabriel" />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginStart="@dimen/ui_space_size_80dp"
            android:layout_marginTop="@dimen/ui_space_size_30dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.P2"
            tools:text="active" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginStart="@dimen/ui_space_size_80dp"
            android:layout_marginTop="@dimen/ui_space_size_50dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.P2"
            tools:text="+213-3317-278-853" />

        <TextView
            android:id="@+id/profile_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:autoLink="web"
            android:linksClickable="true"
            android:layout_marginTop="@dimen/ui_space_size_80dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.P2"
            tools:text="https://manchester.com" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/backdrop_guideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

</androidx.cardview.widget.CardView>